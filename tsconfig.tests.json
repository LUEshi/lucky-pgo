{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "types": ["node", "vite/client"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "dist-tests"
  },
  "include": [
    "tests/**/*.ts",
    "src/utils/csvParser.ts",
    "src/utils/luckyShare.ts",
    "src/utils/priorityScorer.ts",
    "src/utils/pokemonMatcher.ts",
    "src/utils/eventFilters.ts",
    "src/utils/eventOverlay.ts",
    "src/types/index.ts"
  ]
}
